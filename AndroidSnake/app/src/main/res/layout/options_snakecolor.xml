<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headcolor_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:text="@string/choose_snake_head"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bodycolor_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:text="@string/choose_snake_body"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headcolor_textview" />

    <ImageButton
        android:id="@+id/head_imbtn2"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headcolor_textview"
        app:srcCompat="@drawable/ic_blue" />

    <ImageButton
        android:id="@+id/head_imbtn1"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/head_imbtn2"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headcolor_textview"
        app:srcCompat="@drawable/ic_red" />

    <ImageButton
        android:id="@+id/body_imbtn1"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/head_imbtn2"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodycolor_textview"
        app:srcCompat="@drawable/ic_green" />

    <ImageButton
        android:id="@+id/body_imbtn2"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodycolor_textview"
        app:srcCompat="@drawable/ic_red" />

</androidx.constraintlayout.widget.ConstraintLayout>